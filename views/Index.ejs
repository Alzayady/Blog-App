<% include partials/header  %>
	<div class="ui main text container ">
         <div class="ui huge header "> Phones Blogs </div>
		<div class="ui top attached segment">
			<div class="ui divided items">
				<% MOBS.forEach(function(mop){ %>
				<div class="item">
					<div class="image">
						<img src = <%= mop.image %>>
					</div>
					<div class="content">
						<a class="header"  href="/blogs/<%=mop._id%>" > <%= mop.title %></a>
						<div class="meta">
							<span>created : <%=  mop.created.toDateString() %>	</span>
						</div>
						<div class="description">
							<p><%- mop.post.substring(0,100)%> </p> 
						</div>
						<div class="extra">
							<a class="ui floated basic violet button"href="/blogs/<%=mop._id%>">..Read More
							   <i class="right chevron icon"></i>
							</a>
						</div>
					</div>
					<p>
					</p>
				</div>
                <% }); %>
			</div>
		</div>
	</div>

<% include partials/footer %>